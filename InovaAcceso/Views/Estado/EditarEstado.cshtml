@model InovaAcceso.Models.Estado;
@{
    ViewData["Title"] = "Editar Estado";
}
<div class="container-fluid px-4 mt-4">
    <ol class="breadcrumb mb-4">
        <li class="breadcrumb-item"><a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a></li>
        <li class="breadcrumb-item active">Editar Estado</li>
    </ol>
    <div class="row">
        <div class="col-sm-8 offset-sm-2">
            <form asp-controller="Estado" asp-action="EditarEstado" method="post">
                <div class="mb-3">
                    <input class="form-control" asp-for="IdEstado" type="hidden" />
                </div>
                <div class="mb-3">
                    <label>Nombre Estado</label>
                    <input class="form-control" asp-for="NombreEstado" type="text" />
                </div>
                <div class="mb-3">
                    <label>Fecha Creacion</label>
                    <input class="form-control" asp-for="FechaCreacion" type="datetime" readonly />
                </div>
                <div class="mb-3">
                    <label>Fecha Modificacion</label>
                    <input class="form-control" asp-for="FechaModificacion" type="datetime" readonly value="@DateTime.Now" />
                </div>
                <div class="mb-3">
                    <label>Responsable Modificacion</label>
                    <input class="form-control" asp-for="ResponsableModificacion" type="datetime" readonly value="Admin" />
                </div>
                <div class="mb-3">
                    <button class="btn btn-primary" type="submit">Guardar</button>
                    <a asp-controller="Estado" asp-action="ListaEstado" class="btn btn-warning">Volver</a>
                </div>
            </form>
        </div>
    </div>
</div>






