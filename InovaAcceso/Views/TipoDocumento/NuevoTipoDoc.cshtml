@model InovaAcceso.Models.TipoDocumento;
@{
    ViewData["Title"] = "Crear Tipos de Documentos";
}
<div class="container-fluid px-4 mt-4">

    <ol class="breadcrumb mb-4">
        <li class="breadcrumb-item"><a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a></li>
        <li class="breadcrumb-item active">Crear Tipos de Documentos</li>
    </ol>
    <div class="row">
        <div class="col-sm-8 offset-sm-2">
            <form asp-controller="TipoDocumento" asp-action="NuevoTipoDoc" method="post">
                <div class="mb-3">
                    <label>Tipo de documento</label>
                    <input class="form-control" required asp-for="Documento" type="text" />
                </div>
                <div class="mb-3">
                    <label>Fecha Creacion</label>
                    <input class="form-control" asp-for="FechaCreacion" type="datetime" readonly value="@DateTime.Now" />
                </div>
                <div class="mb-3">
                    <label>Fecha Modificacion</label>
                    <input class="form-control" asp-for="FechaModificacion" type="datetime" readonly value="@DateTime.Now" />
                </div>
                <div class="mb-3">
                    <label>Responsable Modificacion</label>
                    <input class="form-control" asp-for="ResponsableModificacion" type="text" readonly value="Admin" />
                </div>
                <div class="mb-3">
                    <button class="btn btn-primary" type="submit">Guardar</button>
                    <a asp-controller="TipoDocumento" asp-action="ListaTipoDoc" class="btn btn-warning">Volver</a>
                </div>
            </form>
        </div>
    </div>
</div>
