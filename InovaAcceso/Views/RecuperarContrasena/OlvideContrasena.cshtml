@{
    ViewData["Title"] = "Olvidé mi Contraseña";
}

<h2>Olvidé mi Contraseña</h2>
<p>Introduce tu correo electrónico para recibir un enlace de restablecimiento de contraseña.</p>

<form asp-action="OlvideContrasena" method="post" class="mt-4">
    <div class="form-group">
        <label for="Email">Correo Electrónico</label>
        <input type="email" class="form-control" id="Email" name="email" placeholder="Ingresa tu correo electrónico" required />
        <small class="form-text text-muted">Te enviaremos un enlace para restablecer tu contraseña.</small>
    </div>
    <button type="submit" class="btn btn-primary mt-3">Enviar enlace</button>
</form>
