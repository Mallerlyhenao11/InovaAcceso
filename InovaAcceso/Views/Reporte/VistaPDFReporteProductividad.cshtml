@model List<InovaAcceso.Models.ProductividadModel>
@{
    Layout = null;
    var fechaEmision = DateTime.Now.ToString("dd 'de' MMMM 'de' yyyy");
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Certificado de Productividad</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@400;500;600;700&family=Lora:wght@400;500;600&display=swap" rel="stylesheet">
    <style>
        body {
            font-family: 'Montserrat', sans-serif;
            background-color: #f8f9fa;
            color: #333;
            line-height: 1.6;
        }

        .certificate-container {
            max-width: 800px;
            margin: 30px auto;
            background-color: white;
            box-shadow: 0 0 20px rgba(0, 0, 0, 0.1);
            border-radius: 8px;
            overflow: hidden;
        }

        .certificate {
            padding: 40px;
            position: relative;
        }

            .certificate::before {
                content: '';
                position: absolute;
                top: 0;
                left: 0;
                right: 0;
                height: 10px;
                background: linear-gradient(90deg, #18346d, #2b8fc8, #2bc9c8, #5dd1d1);
            }

        .header {
            text-align: center;
            margin-bottom: 30px;
            border-bottom: 1px solid #dee2e6;
            padding-bottom: 20px;
        }

            .header h1 {
                margin-top: 20px;
                font-family: 'Lora', serif;
                font-weight: 600;
                color: #18346d;
            }

        .metrics-box {
            background-color: #f8f9fa;
            border-radius: 8px;
            padding: 20px;
            margin: 25px 0;
            border-left: 4px solid #18346d;
        }

        .metric-item {
            text-align: center;
            padding: 15px 10px;
        }

        .metric-value {
            font-size: 28px;
            font-weight: 600;
            color: #18346d;
            margin-bottom: 5px;
        }

        .metric-label {
            font-size: 14px;
            color: #6c757d;
        }
    </style>
</head>
<body>
    <div class="container">
        <div class="certificate-container">
            <div class="certificate">
                <div class="watermark">INOVACCESO</div>
                <div class="header">
                    <img src="/img/Logo2.png" alt="Logo" class="img-fluid" style="max-height: 100px;">
                    <h1>CERTIFICADO DE PRODUCTIVIDAD</h1>
                </div>
                <p class="fw-bold">Fecha de emisión: @fechaEmision</p>
                <p>Este documento certifica la productividad de los empleados en la fecha indicada.</p>
                <div class="metrics-box">
                    <table class="table table-striped text-center">
                        <thead>
                            <tr>
                                <th>Turno</th>
                                <th>Programados</th>
                                <th>Productivos</th>
                                <th>Productividad (%)</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var turno in Model)
                            {
                                <tr>
                                    <td>@turno.NombreTurno</td>
                                    <td>@turno.TotalEmpleados</td>
                                    <td>@turno.TotalProductivos</td>
                                    <td>@turno.PorcentajeProductividad %</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
                <h3>Productividad Total: @ViewBag.ProductividadTotal.ToString("F2") %</h3>
                <p>Este documento se emite a solicitud del interesado para los fines pertinentes.</p>
                <div class="footer text-center">
                    <img src="/img/Firma.png" alt="Firma" class="img-fluid" style="max-height: 60px;">
                    <p class="fw-bold">Gisella Londoño</p>
                    <p>Directora de Recursos Humanos</p>
                    <p class="text-muted small">INOVACCESO S.A.S</p>
                </div>
            </div>
        </div>
    </div>
</body>
</html>
