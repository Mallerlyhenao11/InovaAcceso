 @model InovaAcceso.Models.Persona

@{
    Layout = null;
    var fechaEmision = DateTime.Now.ToString("dd 'de' MMMM 'de' yyyy");
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Certificado Laboral - @Model.PrimerNombre @Model.SegundoApellido</title>
    
    <!-- Bootstrap 5.1 CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    
    <!-- Fuentes de Google -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@400;500;600;700&family=Lora:wght@400;500;600&display=swap" rel="stylesheet">
    
    <style>
        body {
            font-family: 'Montserrat', sans-serif;
            background-color: #f8f9fa;
            color: #333;
            line-height: 1.6;
        }
        
        .certificate-container {
            max-width: 800px;
            margin: 30px auto;
            background-color: white;
            box-shadow: 0 0 20px rgba(0, 0, 0, 0.1);
            border-radius: 8px;
            overflow: hidden;
        }
        
        .certificate {
            padding: 40px;
            position: relative;
        }
        
        .certificate::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            height: 10px;
            background: linear-gradient(90deg, #18346d, #2b8fc8, #2bc9c8, #5dd1d1);
        }
        
        .header {
            text-align: center;
            margin-bottom: 30px;
            border-bottom: 1px solid #dee2e6;
            padding-bottom: 20px;
        }
        
        .header h1 {
            margin-top: 20px;
            font-family: 'Lora', serif;
            font-weight: 600;
            color: #18346d;
        }
        
        .content {
            text-align: justify;
            margin-bottom: 40px;
        }
        
        .employee-info {
            background-color: #f8f9fa;
            border-left: 4px solid #18346d;
            padding: 15px 20px;
            margin: 25px 0;
            border-radius: 0 4px 4px 0;
        }
        
        .employee-info p {
            margin-bottom: 8px;
        }
        
        .footer {
            margin-top: 60px;
            text-align: center;
        }
        
        .signature {
            display: inline-block;
            margin-top: 20px;
        }
        
        .signature-line {
            width: 200px;
            height: 1px;
            background-color: #333;
            margin: 0 auto 10px;
        }
        
        .signature p {
            margin: 5px 0;
        }
        
        .watermark {
            position: absolute;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%) rotate(-45deg);
            opacity: 0.05;
            font-size: 120px;
            font-weight: bold;
            color: #18346d;
            pointer-events: none;
            white-space: nowrap;
        }
        
        .certificate-footer {
            text-align: center;
            font-size: 12px;
            color: #6c757d;
            margin-top: 30px;
            border-top: 1px solid #dee2e6;
            padding-top: 15px;
        }
        
        
    </style>
</head>
<body>
    <div class="container">
        <div class="certificate-container">
            <div class="certificate">
                <div class="watermark">INOVACCESO</div>
                
                <div class="header">
                    <div class="row align-items-center">
                        <div class="col-md-12 text-center">
                            <img src="/img/Lo" alt="Logo de INOVACCESO" class="img-fluid" style="max-height: 100px;">
                            <h1 class="mt-3">CERTIFICADO LABORAL</h1>
                        </div>
                    </div>
                </div>

                <div class="content">
                    <p class="fw-bold">
                        Fecha de emisión: @fechaEmision
                    </p>
                    
                    <p>
                        Por medio de la presente, <strong>INOVACCESO S.A.S</strong>, identificada con NIT 900.123.456-8,
                        certifica que:
                    </p>

                    <div class="employee-info">
                        <div class="row">
                            <div class="col-md-6">
                                <p><strong>Nombre completo:</strong> @Model.NombreCompleto</p>
                                <p><strong>Tipo de documento:</strong> @Model.TipoDocumento.Documento</p>
                                <p><strong>Número de identificación:</strong> @Model.NumeroDocumento</p>
                            </div>
                            <div class="col-md-6">
                                <p><strong>Cargo actual:</strong> @Model.Cargo.NombreCargo</p>
                                <p><strong>Fecha de ingreso:</strong> @Model.FechaIngreso.ToString("dd 'de' MMMM 'de' yyyy")</p>
                                <p><strong>Tipo de contrato:</strong> Término indefinido</p>
                            </div>
                        </div>
                    </div>

                    <p>
                        Labora en nuestra compañía desempeñando sus funciones de manera responsable y competente,
                        demostrando excelentes habilidades profesionales y compromiso con sus responsabilidades.
                    </p>
                    
                    <p>
                        La presente certificación se expide a solicitud del interesado para los fines que estime convenientes.
                    </p>
                    
                    <p>
                        Para constancia se firma en la ciudad de Bogotá, a los @DateTime.Now.Day días del mes de @DateTime.Now.ToString("MMMM") del año @DateTime.Now.Year.
                    </p>
                </div>

                <div class="footer">
                    <img src="/img/Firma.png" alt="Logo" class="logo">
                    <div class="signature">
                        <div class="signature-line"></div>
                                                           
                        <p class="fw-bold mb-0">Gisella Londoño</p>
                        <p>Directora de Recursos Humanos</p>
                        <p class="text-muted small">INOVACCESO S.A.S</p>
                    </div>
                    
                    <div class="certificate-footer">
                        <p class="mb-1">INOVACCESO S.A.S - NIT 900.123.456-8</p>
                        <p class="mb-1">Calle 123 # 45-67,  Medellín, Colombia</p>
                        <p class="mb-0">Tel: (601) 123-4567 - Email: rrhh@inovacceso.com.co</p>
                    </div>
                </div>
            </div>
        </div>
     </div>
        
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
