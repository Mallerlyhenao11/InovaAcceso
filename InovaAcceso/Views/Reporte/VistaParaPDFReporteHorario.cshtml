@model List<InovaAcceso.Models.RegistroAsistencia>

@{
    Layout = null;
}


<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8">
    <title>Certificado de Horarios</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            text-align: center;
        }

        h2 {
            color: #333;
        }

        table {
            width: 100%;
            border-collapse: collapse;
            margin-top: 20px;
        }

        th, td {
            border: 1px solid black;
            padding: 8px;
            text-align: center;
        }

        th {
            background-color: #f2f2f2;
        }
    </style>
</head>
<body>
    <h2>Certificado de Reporte de Horarios</h2>
    <p>Fecha de generación: @DateTime.Now.ToString("dd/MM/yyyy")</p>

    <table>
        <tr>
            <th>Empleado</th>
            <th>Fecha</th>
            <th>Hora Ingreso</th>
            <th>Hora Salida</th>
            <th>Estado</th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Persona.NombreCompleto</td>
                <td>@item.FechaIngreso.ToString("dd/MM/yyyy")</td>
                <td>@item.HoraIngreso</td>
                <td>@item.HoraSalida</td>
                <td>@(item.LlegadaTarde ? "Tarde" : "A tiempo")</td>
            </tr>
        }
    </table>
</body>
</html>
