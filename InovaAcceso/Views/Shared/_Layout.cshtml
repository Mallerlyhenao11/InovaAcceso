@using InovaAcceso.Service;
@inject UsuarioService _usuarioService
<!DOCTYPE html>
<html lang="es">
@* Cambiado a "es" para español *@
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - InovaAcceso</title>
    @* CSS - Eliminadas redundancias y ordenadas las referencias *@
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/sweetalert2@11/dist/sweetalert2.min.css">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/InovaAcceso.styles.css" asp-append-version="true" />

    @* Eliminado el SVG inline - debería estar en un archivo separado o usado como ícono *@
</head>
<body class="sb-nav-fixed">
    <nav class="sb-topnav navbar navbar-expand navbar-dark" style="background-color: #132A58;">
        <a class="navbar-brand ps-3"> InovaAcceso</a>
        <button class="btn btn-link btn-sm order-1 order-lg-0 me-4 me-lg-0" id="sidebarToggle" href="#!">
            <i class="fas fa-bars"></i>
        </button>

        <div class="ms-auto me-0 me-md-3 my-2 my-md-0">
            <ul class="navbar-nav">
                <li class="nav-item">
                    <a asp-area="" asp-controller="Home" asp-action="Salir" class="nav-link">
                        <i class="fa fa-sign-out-alt fa-lg"></i> @* Actualizado al ícono más moderno *@
                    </a>
                </li>
            </ul>
        </div>
    </nav>

    <div id="layoutSidenav">
        <div id="layoutSidenav_nav">
            <nav class="sb-sidenav accordion sb-sidenav-dark" id="sidenavAccordion">
                <div class="sb-sidenav-menu" style="background-color: #132A58;">
                    @if (_usuarioService.UsuarioRol == "Admin")
                    {
                        <div class="nav">
                            @* El contenido del menú Admin se mantiene igual *@
                            @* ... *@
                            <!-- Grupo1<div class="sb-sidenav-menu-heading">Home</div>-->
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index">
                                <div class="sb-nav-link-icon" style="color: #ffffff;"><i class="fa fa-home"></i></div>
                                Home
                            </a>
                            <!-- Grupo Paginas-->
                            <div class="sb-sidenav-menu-heading" style="color: #ffffff;">Paginas</div>
                            <!-- Personas-->
                            <a class="nav-link" asp-area="" asp-controller="Persona" asp-action="ListaPersonas">
                                <div class="sb-nav-link-icon"><i class="fa-solid fa-users-gear" style="color: #B197FC;"></i></div>
                                Usuarios
                            </a>
                            <!-- Gestion Turno-->
                            <a class="nav-link " asp-area="" asp-controller="GestionTurno" asp-action="listaAsignacionTurno">
                                <div class="sb-nav-link-icon"><i class="fa-solid fa-user-clock" style="color: #B197FC;"></i></div>
                                Asignar Turnos
                            </a>
                            <!-- Asistencia-->
                            <a class="nav-link" asp-area="" asp-controller="Asistencia" asp-action="listaAsistencia">

                                <div class="sb-nav-link-icon"><i class="fa-solid fa-clock" style="color: #B197FC;"></i></div>
                                Asistencia
                            </a>
                            <!-- Turnos-->
                            <a class="nav-link" asp-area="" asp-controller="Turno" asp-action="ListaTurnos">
                                <div class="sb-nav-link-icon"><i class="fa-regular fa-calendar-plus" style="color: #B197FC;"></i></div>
                                Turnos
                            </a>
                            <!-- Grupo datos sistema-->
                            <div class="sb-sidenav-menu-heading" style="color: #ffffff;">Datos del sistema</div>
                            <!-- Cargos-->
                            <a class="nav-link" asp-area="" asp-controller="Cargo" asp-action="ListaCargo">
                                <div class="sb-nav-link-icon"><i class="fa-solid fa-award" style="color: #B197FC;"></i></div>
                                Cargos
                            </a>
                            <!-- Estados-->
                            <a class="nav-link" asp-area="" asp-controller="Estado" asp-action="ListaEstado">
                                <div class="sb-nav-link-icon"><i class="fa-solid fa-award" style="color: #B197FC;"></i></div>
                                Estados
                            </a>
                            <!-- Tipo Documento-->
                            <a class="nav-link" asp-area="" asp-controller="TipoDocumento" asp-action="ListaTipoDoc">
                                <div class="sb-nav-link-icon"><i class="fa-regular fa-address-card" style="color: #B197FC;"></i></div>
                                Tipo Documento
                            </a>
                            <!-- Tipo Huella-->
                            <a class="nav-link" asp-area="" asp-controller="Huella" asp-action="CapturarHuella">
                                <div class="sb-nav-link-icon"><i class="fa-solid fa-fingerprint" style="color: #B197FC;"></i></div>
                                Huella
                            </a>
                            <!-- Grupo Reportes-->
                            <div class="sb-sidenav-menu-heading" style="color: #ffffff;">Visor de Datos</div>
                            <a class="nav-link" asp-area="" asp-controller="Reporte" asp-action="Reportes">
                                <div class="sb-nav-link-icon"><i class="fa-solid fa-file-lines" style="color: #B197FC;"></i></div>
                                Reportes
                            </a>
                            <!-- Grupo de graficos-->
                            <a class="nav-link" asp-controller="Reporte" asp-action="GraficoAsistencia">
                                <div class="sb-nav-link-icon"><i class="fas fa-chart-area" style="color: #B197FC;"></i></div>
                                Gráficos
                            </a>

                        </div>
                    }
                    else if (_usuarioService.UsuarioRol == "User")
                    {
                        <div class="nav">
                            @* El contenido del menú User se mantiene igual *@
                            @* ... *@
                            <!-- Grupo1<div class="sb-sidenav-menu-heading">Home</div>-->
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index">
                                <div class="sb-nav-link-icon" style="color: #ffffff;"><i class="fa fa-home"></i></div>
                                Home
                            </a>
                            <!-- Grupo usurio para user-->
                            <a class="nav-link" asp-area="" asp-controller="Persona" asp-action="InformacionPersonal">
                                <div class="sb-nav-link-icon"><i class="fa-solid fa-user" style="color: #B197FC;"> </i></div>
                                Mi Información
                            </a>
                            <!-- Grupo de certificados para usuario-->
                            <a class="nav-link" asp-area="" asp-controller="GestionTurno" asp-action="ListarTurnoPersona">
                                <div class="sb-nav-link-icon"><i class="fa-solid fa-user-clock" style="color: #B197FC;"></i></div>
                                Mis Turnos
                            </a>
                            <!-- Grupo de novedades para usuario-->
                            <a class="nav-link" asp-area="" asp-controller="Reporte" asp-action="ReportesUser">
                                <div class="sb-nav-link-icon"><i class="fa-solid fa-file-lines" style="color: #B197FC;"></i></div>
                                Certificados
                            </a>
                        </div>
                    }
                </div>
                <div class="sb-sidenav-footer" style="background-color: #132A58;">
                    <div class="small">Inicio sesión como: @_usuarioService.UsuarioRol</div>
                    @_usuarioService.UsuarioNombres
                </div>
            </nav>
        </div>

        <div id="layoutSidenav_content">
            <main class="container-fluid px-4">
                @RenderBody()
            </main>

            <footer class="py-4 bg-light mt-auto">
                <div class="container-fluid px-4">
                    <div class="d-flex align-items-center justify-content-between small">
                        <div class="text-muted">Copyright &copy; InovaAcceso @DateTime.Now.Year</div>
                        <div>
                            <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                        </div>
                    </div>
                </div>
            </footer>
        </div>
    </div>

    @* Scripts - Eliminadas redundancias y ordenados *@
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
